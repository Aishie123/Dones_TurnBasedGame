<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bgDarkForest"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:maxHeight="800dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/bgRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bgRectangle"
        app:srcCompat="@drawable/darkforestbg" />

    <View
        android:id="@+id/bgRectangle"
        android:layout_width="748dp"
        android:layout_height="54dp"
        android:background="@drawable/darkgroundbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/enemy1_idleSprite"
        android:layout_width="158dp"
        android:layout_height="194dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="44dp"
        android:scaleType="fitCenter"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="@+id/bgDarkForest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/enemy1_idle1" />

    <ImageView
        android:id="@+id/hero1_idleSprite"
        android:layout_width="124dp"
        android:layout_height="158dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="52dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/bgDarkForest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995"
        app:srcCompat="@drawable/hero1_idle1" />

    <ImageButton
        android:id="@+id/btnDefend"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAttack"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnAttack"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/btnDefend"
        app:layout_constraintEnd_toEndOf="@+id/btnDefend"
        app:layout_constraintStart_toStartOf="@+id/btnDefend"
        app:layout_constraintTop_toBottomOf="@+id/hero1_idleSprite"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Attack"
        app:layout_constraintBottom_toBottomOf="@+id/btnAttack"
        app:layout_constraintEnd_toEndOf="@+id/btnAttack"
        app:layout_constraintStart_toStartOf="@+id/btnAttack"
        app:layout_constraintTop_toTopOf="@+id/btnAttack" />

    <TextView
        android:id="@+id/txtDefend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Defend"
        app:layout_constraintBottom_toBottomOf="@+id/btnDefend"
        app:layout_constraintEnd_toEndOf="@+id/btnDefend"
        app:layout_constraintStart_toStartOf="@+id/btnDefend"
        app:layout_constraintTop_toTopOf="@+id/btnDefend" />


</androidx.constraintlayout.widget.ConstraintLayout>

