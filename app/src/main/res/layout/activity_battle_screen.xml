<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".View.BattleScreen">

    <ImageView
        android:id="@+id/bgDarkForest"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:maxHeight="800dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/bgRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="@+id/bgRectangle"
        app:srcCompat="@drawable/bg_darkforest" />

    <View
        android:id="@+id/bgRectangle"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:scaleType="fitXY"
        android:background="@drawable/bg_darkforestground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnSS1"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toEndOf="@+id/txtbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917"
        app:srcCompat="@drawable/swordskill2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnSS2"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toEndOf="@+id/btnSS1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917"
        app:srcCompat="@drawable/swordskill1"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtbox"
        app:layout_constraintHorizontal_bias="0.747"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923"
        app:srcCompat="@drawable/btn_unpressed"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicobold_regular"
        android:text="Start Battle"
        app:layout_constraintBottom_toBottomOf="@+id/btnStart"
        app:layout_constraintEnd_toEndOf="@+id/btnStart"
        app:layout_constraintStart_toStartOf="@+id/btnStart"
        app:layout_constraintTop_toTopOf="@+id/btnStart" />

    <ImageView
        android:id="@+id/txtbox"
        android:layout_width="278dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/txtbox" />

    <TextView
        android:id="@+id/txtCombatLog"
        android:layout_width="243dp"
        android:layout_height="56dp"
        android:fontFamily="@font/nicoclean_regular"
        android:text="Ready for Battle!"
        app:layout_constraintBottom_toBottomOf="@+id/txtbox"
        app:layout_constraintEnd_toEndOf="@+id/txtbox"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/txtbox"
        app:layout_constraintTop_toTopOf="@+id/txtbox"
        app:layout_constraintVertical_bias="0.551" />

    <TextView
        android:id="@+id/txtQuoteLog"
        android:layout_width="233dp"
        android:layout_height="69dp"
        android:layout_marginBottom="240dp"
        android:fontFamily="@font/nicoclean_regular"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/txtbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="137dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nicoclean_regular"
        android:text="Hero"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txtHeroHP"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/nicoclean_regular"
        android:text="HP"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtHeroMP"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/nicoclean_regular"
        android:text="MP"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <View
        android:id="@+id/heroMPBar"
        android:layout_width="106dp"
        android:layout_height="17dp"
        android:background="@drawable/mp_barbg"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="139dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/hp_bar" />

    <View
        android:id="@+id/heroHPBar"
        android:layout_width="106dp"
        android:layout_height="17dp"
        android:background="@drawable/hp_greenbarbg"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="139dp"
        android:layout_height="24dp"

        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/mp_bar" />

    <ImageView
        android:id="@+id/hero_runSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/hero_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/hero_idleSprite"
        app:layout_constraintStart_toStartOf="@+id/hero_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/hero_idleSprite"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hero1_run1" />

    <ImageView
        android:id="@+id/hero_hitSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/hero_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/hero_idleSprite"
        app:layout_constraintStart_toStartOf="@+id/hero_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/hero_idleSprite"
        app:srcCompat="@drawable/hero1_hit1" />

    <ImageView
        android:id="@+id/hero_ss1Sprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/hero_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/hero_idleSprite"
        app:layout_constraintStart_toStartOf="@+id/hero_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/hero_idleSprite"
        app:srcCompat="@drawable/hero1_ss1_1" />

    <ImageView
        android:id="@+id/hero_deathSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/hero_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/hero_idleSprite"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/hero_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/hero_idleSprite"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hero1_death1" />

    <ImageView
        android:id="@+id/hero_ss2Sprite"
        android:layout_width="201dp"
        android:layout_height="147dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/hero_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/hero_idleSprite"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="@+id/hero_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/hero_idleSprite"
        app:layout_constraintVertical_bias="0.484"
        app:srcCompat="@drawable/hero1_ss2_1" />

    <ImageView
        android:id="@+id/enemy_attackSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:layout_marginEnd="-75dp"
        android:scaleX="-1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/enemy_idleSprite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enemy_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/enemy_idleSprite"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/enemy1_attack1" />

    <ImageView
        android:id="@+id/enemy_walkSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:layout_marginEnd="-75dp"
        android:scaleX="-1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/enemy_idleSprite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enemy_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/enemy_idleSprite"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/enemy1_walk1" />

    <ImageView
        android:id="@+id/enemy_hitSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:layout_marginEnd="-75dp"
        android:scaleX="-1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/enemy_idleSprite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enemy_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/enemy_idleSprite"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/enemy1_hit1" />

    <ImageView
        android:id="@+id/hero_attkSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/hero_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/hero_idleSprite"
        app:layout_constraintStart_toStartOf="@+id/hero_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/hero_idleSprite"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/hero1_attack1" />

    <ImageView
        android:id="@+id/hero_idleSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:layout_marginStart="-70dp"
        android:layout_marginBottom="-15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/hero1_idle1" />

    <ImageView
        android:id="@+id/enemy_deathSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:layout_marginEnd="-75dp"
        android:scaleX="-1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/enemy_idleSprite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enemy_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/enemy_idleSprite"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/enemy1_death1" />

    <ImageView
        android:id="@+id/enemy_idleSprite"
        android:layout_width="428dp"
        android:layout_height="340dp"
        android:layout_marginEnd="-75dp"
        android:scaleX="-1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/enemy1_idle1" />

    <TextView
        android:id="@+id/txtEnemy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nicoclean_regular"
        android:text="Enemy"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_idleSprite"
        app:layout_constraintEnd_toEndOf="@+id/enemy_idleSprite"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/enemy_idleSprite"
        app:layout_constraintTop_toTopOf="@+id/enemy_idleSprite"
        app:layout_constraintVertical_bias="0.211" />

    <TextView
        android:id="@+id/txtEnemyHP"
        android:layout_width="45dp"
        android:layout_height="14dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/nicoclean_regular"
        android:gravity="center"
        android:text="HP"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/enemyHPBar_base"
        app:layout_constraintEnd_toEndOf="@+id/enemyHPBar_base"
        app:layout_constraintStart_toStartOf="@+id/enemyHPBar_base" />

    <View
        android:id="@+id/enemyHPBar"
        android:layout_width="77dp"
        android:layout_height="12dp"
        android:background="@drawable/hp_greenbarbg"
        app:layout_constraintBottom_toBottomOf="@+id/enemyHPBar_base"
        app:layout_constraintEnd_toEndOf="@+id/enemyHPBar_base"
        app:layout_constraintStart_toStartOf="@+id/enemyHPBar_base"
        app:layout_constraintTop_toTopOf="@+id/enemyHPBar_base" />

    <ImageView
        android:id="@+id/enemyHPBar_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/txtEnemy"
        app:layout_constraintEnd_toEndOf="@+id/txtEnemy"
        app:layout_constraintStart_toStartOf="@+id/txtEnemy"
        app:srcCompat="@drawable/enemyhpbar" />

    <ImageView
        android:id="@+id/btnBattleMenu"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:onClick="battleToMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051"
        app:srcCompat="@drawable/btn_up_menu"
        tools:ignore="OnClick,TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>

